#!/bin/sh

# run xinitrc.d scripts
if [ -d /etc/X11/xinit/xinitrc.d ] ; then
    for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# xresources
xrdb -merge ~/.config/x11/xresources

# start software
picom --xrender-sync-fence --unredir-if-possible &
feh --bg-scale --no-fehbg ~/.config/desktop/backgrounds/pixel-market.png
~/.local/share/go/bin/dwmbar > /tmp/dwmbar-$(date +%N).log &

# setup monitors with xrandr
xrandr --output DP-0 --auto --output HDMI-0 --primary --left-of DP-0
xrandr --output HDMI-0 --mode 1920x1080 -r 120.00

# keyboard and mouse settings
xset r rate 400 40
xinput --set-prop 8 --type=float 'Coordinate Transformation Matrix' 1 0 0 0 1 0 0 0 3.16666
sh -c 'sleep 5 && xsetroot -xcf ~/.local/share/icons/crosshair/cursors/default 32' & disown

# create /tmp folders (use systemd-tmpfiles?)
for i in {1..15}
do
    mkdir -p /tmp/mc/$i
    mkdir -p /tmp/mclog/$i
done

# nvidia
nvidia-settings --config=/home/dog/.config/nv-settings --load-config-only

exec dwm

# vim:ft=bash
