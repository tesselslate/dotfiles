#!/usr/bin/fish

for f in */*.lua
    # too lazy to put these all on one line
    sed -i 's/TSAnnotation/@annotation/' $f
    sed -i 's/TSAttribute/@attribute/' $f
    sed -i 's/TSBoolean/@boolean/' $f
    sed -i 's/TSCharacter/@character/' $f
    sed -i 's/TSCharacterSpecial/@character.special/' $f
    sed -i 's/TSComment/@comment/' $f
    sed -i 's/TSConditional/@conditional/' $f
    sed -i 's/TSConstant/@constant/' $f
    sed -i 's/TSConstBuiltin/@constant.builtin/' $f
    sed -i 's/TSConstMacro/@constant.macro/' $f
    sed -i 's/TSConstructor/@constructor/' $f
    sed -i 's/TSDebug/@debug/' $f
    sed -i 's/TSDefine/@define/' $f
    sed -i 's/TSError/@error/' $f
    sed -i 's/TSException/@exception/' $f
    sed -i 's/TSField/@field/' $f
    sed -i 's/TSFloat/@float/' $f
    sed -i 's/TSFunction/@function/' $f
    sed -i 's/TSFunctionCall/@function.call/' $f
    sed -i 's/TSFuncBuiltin/@function.builtin/' $f
    sed -i 's/TSFuncMacro/@function.macro/' $f
    sed -i 's/TSInclude/@include/' $f
    sed -i 's/TSKeyword/@keyword/' $f
    sed -i 's/TSKeywordFunction/@keyword.function/' $f
    sed -i 's/TSKeywordOperator/@keyword.operator/' $f
    sed -i 's/TSKeywordReturn/@keyword.return/' $f
    sed -i 's/TSLabel/@label/' $f
    sed -i 's/TSMethod/@method/' $f
    sed -i 's/TSMethodCall/@method.call/' $f
    sed -i 's/TSNamespace/@namespace/' $f
    sed -i 's/TSNone/@none/' $f
    sed -i 's/TSNumber/@number/' $f
    sed -i 's/TSOperator/@operator/' $f
    sed -i 's/TSParameter/@parameter/' $f
    sed -i 's/TSParameterReference/@parameter.reference/' $f
    sed -i 's/TSPreProc/@preproc/' $f
    sed -i 's/TSProperty/@property/' $f
    sed -i 's/TSPunctDelimiter/@punctuation.delimiter/' $f
    sed -i 's/TSPunctBracket/@punctuation.bracket/' $f
    sed -i 's/TSPunctSpecial/@punctuation.special/' $f
    sed -i 's/TSRepeat/@repeat/' $f
    sed -i 's/TSStorageClass/@storageclass/' $f
    sed -i 's/TSString/@string/' $f
    sed -i 's/TSStringRegex/@string.regex/' $f
    sed -i 's/TSStringEscape/@string.escape/' $f
    sed -i 's/TSStringSpecial/@string.special/' $f
    sed -i 's/TSSymbol/@symbol/' $f
    sed -i 's/TSTag/@tag/' $f
    sed -i 's/TSTagAttribute/@tag.attribute/' $f
    sed -i 's/TSTagDelimiter/@tag.delimiter/' $f
    sed -i 's/TSText/@text/' $f
    sed -i 's/TSStrong/@text.strong/' $f
    sed -i 's/TSEmphasis/@text.emphasis/' $f
    sed -i 's/TSUnderline/@text.underline/' $f
    sed -i 's/TSStrike/@text.strike/' $f
    sed -i 's/TSTitle/@text.title/' $f
    sed -i 's/TSLiteral/@text.literal/' $f
    sed -i 's/TSURI/@text.uri/' $f
    sed -i 's/TSMath/@text.math/' $f
    sed -i 's/TSTextReference/@text.reference/' $f
    sed -i 's/TSEnvironment/@text.environment/' $f
    sed -i 's/TSEnvironmentName/@text.environment.name/' $f
    sed -i 's/TSNote/@text.note/' $f
    sed -i 's/TSWarning/@text.warning/' $f
    sed -i 's/TSDanger/@text.danger/' $f
    sed -i 's/TSTodo/@todo/' $f
    sed -i 's/TSType/@type/' $f
    sed -i 's/TSTypeBuiltin/@type.builtin/' $f
    sed -i 's/TSTypeQualifier/@type.qualifier/' $f
    sed -i 's/TSTypeDefinition/@type.definition/' $f
    sed -i 's/TSVariable/@variable/' $f
    sed -i 's/TSVariableBuiltin/@variable.builtin/' $f
end
