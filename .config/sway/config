### Applications
set $lock swaylock -t -i ~/.config/desktop/backgrounds/pixel-starry.png
set $menu menu | xargs swaymsg exec --
set $term foot

### Outputs
output * bg ~/.config/desktop/backgrounds/pixel-interior.png fill
output DP-2 {
    mode 1920x1080@165.003Hz
    pos 0 0
    adaptive_sync on
}

output DP-3 {
    mode 1920x1080@60Hz
    pos 1920 0
}

### Inputs
input "12136:130:Hoksi_Technology_DURGOD_Taurus_K320" {
    repeat_delay 300
    repeat_rate 40
}

input "1133:16500:Logitech_G305" {
    accel_profile flat
    pointer_accel 0
}

### Miscellaneous
focus_follows_mouse no
default_border pixel 2
default_floating_border normal
gaps inner 8
seat seat0 xcursor_theme BreezeX-Dark 32

client.focused          #c3e88d #222436 #ffc8d3 #c099ff #c3e88d
client.focused_inactive #82aaff #222436 #ffc8d3 #c099ff #82aaff
client.unfocused        #ff757f #222436 #ffc8d3 #c099ff #ff757f

bar {
    font "JetBrainsMono Nerd Font"
    height 30
    position top
    status_command i3status

    colors {
        statusline #c8d3f5
        background #222436
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

### Keybinds
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

# Switch layout
bindsym $mod+Space input "12136:130:Hoksi_Technology_DURGOD_Taurus_K320" xkb_switch_layout next

# Open terminal
bindsym $mod+Shift+Return exec $term

# Open launcher
bindsym $mod+Return exec $menu

# Lock
bindsym $mod+Alt+L exec $lock

# Screenshot selected area
bindsym $mod+Shift+Print exec screenshot-clipboard area

# Screenshot current monitor
bindsym $mod+Print exec screenshot-clipboard output

# Edit last screenshot
bindsym $mod+Shift+E exec edit-screenshot

# Kill focused window
bindsym $mod+c kill

# Reload
bindsym $mod+Shift+r reload

# Exit
bindsym $mod+Shift+q exec swaynag -t warning -m 'Exit?' -B 'Yes' 'swaymsg exit'

# Floating drag
floating_modifier $mod normal

# Fast workspace switch
bindsym $mod+Ctrl+$down workspace prev
bindsym $mod+Ctrl+$up workspace next

# Switch focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Switch workspace
bindsym $mod+u workspace number 1
bindsym $mod+i workspace number 2
bindsym $mod+o workspace number 3
bindsym $mod+p workspace number 4

# Focus split
bindsym $mod+b splith
bindsym $mod+v splitv

# Switch layouts
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle fullscreen
bindsym $mod+f fullscreen

# Toggle floating
bindsym $mod+Shift+space floating toggle

# Move focus to the parent container
bindsym $mod+a focus parent

# Move to scratchpad
bindsym $mod+Shift+minus move scratchpad

# Pull from scratchpad
bindsym $mod+minus scratchpad show

mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
