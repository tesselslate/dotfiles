#!/usr/bin/dash

OPTS="firefox\n\
minecraft\n\
ncmpcpp\n\
obs\n\
pavucontrol\n\
steam"
case $XDG_SESSION_TYPE in
    wayland)
        RESULT=$(echo OPTS | fuzzel -d)
        ;;
    x11)
        RESULT=$(echo OPTS | rofi -dmenu -p '')
esac
case $RESULT in
    firefox)
        firefox &
        ;;
    minecraft)
        prismlauncher &
        ;;
    ncmpcpp)
        foot ncmpcpp &
        ;;
    obs)
        obs &
        ;;
    pavucontrol)
        pavucontrol &
        ;;
    steam)
        flatpak run --user com.valvesoftware.Steam
esac
