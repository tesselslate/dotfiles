#!/usr/bin/dash

OPTS="celeste\n\
cubiomes\n\
firefox\n\
lonn\n\
minecraft\n\
ncmpcpp\n\
obs\n\
pavucontrol\n\
steam\n\
wayboard"
if [ $XDG_SESSION_TYPE = wayland ]; then
    RESULT=$(echo $OPTS | fuzzel -d --lines $(echo "$OPTS" | wc -l))
else
    RESULT=$(echo $OPTS | rofi -dmenu -p '')
fi
case $RESULT in
    celeste)
        celeste &
        ;;
    cubiomes)
        cubiomes-viewer &
        ;;
    firefox)
        firefox &
        ;;
    lonn)
        cd ~/clones/lonn/ && love Lonn.love &
        ;;
    minecraft)
        prismlauncher &
        ;;
    ncmpcpp)
        foot ncmpcpp &
        ;;
    obs)
        obs &
        ;;
    pavucontrol)
        pavucontrol &
        ;;
    steam)
        flatpak run --user com.valvesoftware.Steam
        ;;
    wayboard)
        wayboard ~/.config/wayboard.cfg &
        ;;
esac
