#!/usr/bin/dash

OPTS="firefox\n\
minecraft\n\
ncmpcpp\n\
obs\n\
pavucontrol\n\
steam"
if [ $XDG_SESSION_TYPE = wayland ]; then
    RESULT=$(echo $OPTS | fuzzel -d)
else
    RESULT=$(echo $OPTS | rofi -dmenu -p '')
fi
case $RESULT in
    firefox)
        firefox &
        ;;
    minecraft)
        prismlauncher &
        ;;
    ncmpcpp)
        kitty -e ncmpcpp &
        ;;
    obs)
        obs &
        ;;
    pavucontrol)
        pavucontrol &
        ;;
    steam)
        flatpak run --user com.valvesoftware.Steam
esac
