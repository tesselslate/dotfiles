#!/usr/bin/dash

OPTS="celeste\n\
firefox\n\
lonn\n\
minecraft\n\
ncmpcpp\n\
obs\n\
pavucontrol\n\
steam\n\
wayboard"
if [ $XDG_SESSION_TYPE = wayland ]; then
    RESULT=$(echo $OPTS | fuzzel -d)
else
    RESULT=$(echo $OPTS | rofi -dmenu -p '')
fi
case $RESULT in
    celeste)
        celeste &
        ;;
    firefox)
        firefox &
        ;;
    lonn)
        ~/clones/lonn/LÃ¶nn.sh & # i love unicode
        ;;
    minecraft)
        prismlauncher &
        ;;
    ncmpcpp)
        kitty -e ncmpcpp &
        ;;
    obs)
        obs &
        ;;
    pavucontrol)
        pavucontrol &
        ;;
    steam)
        flatpak run --user com.valvesoftware.Steam
        ;;
    wayboard)
        wayboard ~/.config/wayboard.cfg &
        ;;
esac
