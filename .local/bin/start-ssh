#!/usr/bin/fish

# ssh-agent outputs POSIX sh commands
# need to echo fish commands
set SSH_AGENT_OUTPUT (ssh-agent -s)

set __SSH_AUTH_SOCK1 (string split ';' "$SSH_AGENT_OUTPUT[1]")
set __SSH_AUTH_SOCK2 (string split '=' "$__SSH_AUTH_SOCK1[1]")
echo "set -x SSH_AUTH_SOCK $__SSH_AUTH_SOCK2[2];"

set __SSH_AGENT_PID1 (string split ';' "$SSH_AGENT_OUTPUT[2]")
set __SSH_AGENT_PID2 (string split '=' "$__SSH_AGENT_PID1[1]")
echo "set -x SSH_AGENT_PID $__SSH_AGENT_PID2[2]"
